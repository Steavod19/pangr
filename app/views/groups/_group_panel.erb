<div class="user-background">
  <div class="row user-background panel-size">
    <p id="group-title" class="text-center panel-title-size">Recently Added Groups</p>

    <div id="group-body" class="row" >
    <% @groups.each do |group| %>
    <div class="large-4 column">
        <ul>
          <div class="text-center group-title">
            <h2><%= link_to group.title, group_path(group) %></h2>
            <p><%= group.description %></p>
          </div>
        </ul>
      </div>
    <% end %>
    </div>
  </div>
</div>
