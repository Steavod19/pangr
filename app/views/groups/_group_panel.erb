<div class="row group-panel-title">
  <h4 class="text-center">Recently Added Groups</h4>
</div>


<% @groups.each do |group| %>

<div class="large-4 column group-panel-spacing">
    <ul>
      <div class="text-center">
        <h3><%= link_to group.title, group_path(group) %></h3>
        <p><%= group.description %></p>
      </div>
    </ul>
</div>
<% end %>
