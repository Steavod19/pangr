<div class="columns medium-12 text-center">


  <div>
    <h4><strong><%= @group.title %></strong></h4>
  </div>
  <div>
    <p>Description: <%= @group.description %></p>
    <p>Created by: <%= @group.user.sname %></p>
  </div>





  <% if signed_in? %>
    <div>
      <ul class="button-group">
        <li><%= button_to "Edit", edit_group_path, class: "tiny button" %></li>
        <li><%= button_to "Delete", group_path(@group), method: :delete, class: "tiny button" %></li>
      </ul>
    </div>
  <% end %>
</div>
